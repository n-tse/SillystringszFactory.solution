@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Assign an engineer</h2>

<h4>Assign an engineer to this machine: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list of machines", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>